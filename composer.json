{
    "authors": [
        {
            "email": "lennart@vazaha.nl",
            "name": "Lennart Hengstmengel"
        }
    ],
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "Vazaha\\Mastodon\\": "src/"
        }
    },
    "description": "A mastodon API client for PHP",
    "license": "MIT",
    "name": "vazaha/mastodon-api-client",
    "require": {
        "guzzlehttp/guzzle": "^7.7",
        "illuminate/collections": "^10.15"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "ergebnis/php-cs-fixer-config": "^5.12",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
        "check-style": [
            "php-cs-fixer fix --diff --dry-run"
        ],
        "fix-style": [
            "php-cs-fixer fix"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse src tests --level 9"
        ]
    },
    "type": "library",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
